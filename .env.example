# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Model Configuration
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# Framework Specific Settings
LANGGRAPH_MODEL=gpt-4
CREWAI_MODEL=gpt-4
AUTOGEN_MODEL=gpt-4

# Testing Configuration
TEST_MODE=true
MAX_TEST_CASES=10
TIMEOUT_SECONDS=300

# Reporting Configuration
REPORT_OUTPUT_DIR=benchmark_results
GENERATE_CHARTS=true
VERBOSE=false

# ===========================
# AWS Configuration
# ===========================

# Enable AWS Bedrock for framework testing
AWS_BEDROCK_ENABLED=false

# AWS Credentials (required for Bedrock and Ground Truth)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
# AWS_SESSION_TOKEN=your_session_token  # Optional for temporary credentials

# Enable/Disable AWS Ground Truth Integration
AWS_GROUND_TRUTH_ENABLED=false

# Ground Truth Core Settings
GROUND_TRUTH_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerGroundTruthRole
GROUND_TRUTH_S3_INPUT_BUCKET=your-ground-truth-input-bucket
GROUND_TRUTH_S3_OUTPUT_BUCKET=your-ground-truth-output-bucket
GROUND_TRUTH_JOB_PREFIX=agentic-framework-eval
GROUND_TRUTH_WORKTEAM_ARN=arn:aws:sagemaker:us-east-1:123456789012:workteam/private-crowd/your-workteam
GROUND_TRUTH_AUTO_LABELING=false
GROUND_TRUTH_LABEL_CATEGORY=agent-evaluation
GROUND_TRUTH_MAX_HUMAN_LABELS=1000
GROUND_TRUTH_MAX_PERCENT_OBJECTS=100

# Security Settings
GROUND_TRUTH_ENABLE_ENCRYPTION=true
# GROUND_TRUTH_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012

# Evaluation Types
GT_EVAL_ACCURACY=true          # Score output accuracy
GT_EVAL_QUALITY=true           # Assess response quality
GT_EVAL_PREFERENCE=false       # Human preference ranking
GT_EVAL_COMPLETION=true        # Task completion verification
GT_EVAL_SAFETY=false           # Safety and compliance review

# Labeling Job Templates (S3 URIs)
GT_TEMPLATE_CLASSIFICATION=s3://aws-sagemaker-ground-truth-templates/text-classification
GT_TEMPLATE_NER=s3://aws-sagemaker-ground-truth-templates/ner
# GT_TEMPLATE_CUSTOM=s3://your-bucket/custom-template.html
# GT_TEMPLATE_RANKING=s3://your-bucket/comparison-ranking-template.html

# Integration Settings
GT_AUTO_SUBMIT=false           # Automatically submit results to Ground Truth
GT_BATCH_SIZE=100              # Batch size for labeling jobs
GT_WAIT_COMPLETION=false       # Wait for labeling job completion
GT_MAX_WAIT_HOURS=24           # Max hours to wait for completion
# GT_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:ground-truth-notifications
GT_USE_CONSOLIDATED=true       # Use consolidated annotations
